<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:text="Hello World!!!"
            android:fontFamily="sans-serif-light"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="right"
            android:text="textView_bottom"
            android:fontFamily="sans-serif-light"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageButton
            android:id="@+id/history_imgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_history_selector"/>
        <ImageButton
            android:id="@+id/ruler_imgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ruler_selector"/>
        <ImageButton
            android:id="@+id/science_imgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_science_selector"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <ImageButton
                android:id="@+id/delete_imgBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_delete_selector"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/line">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_clean"
                style="@style/ButtonCleanTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/clean" />

            <Button
                android:id="@+id/btn_brackets"
                style="@style/ButtonOperatorTheme"
                android:background="@drawable/button_num_selector"
                android:textSize="23dp"
                android:text="@string/brackets" />

            <Button
                android:id="@+id/btn_percent"
                style="@style/ButtonOperatorTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/percent" />

            <Button
                android:id="@+id/btn_div"
                style="@style/ButtonOperatorTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/div" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_7"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/seven" />

            <Button
                android:id="@+id/btn_8"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/eight" />

            <Button
                android:id="@+id/btn_9"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/nine" />

            <Button
                android:id="@+id/btn_mul"
                style="@style/ButtonOperatorTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/mul" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_4"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/four" />

            <Button
                android:id="@+id/btn_5"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/five" />

            <Button
                android:id="@+id/btn_6"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/six" />

            <Button
                android:id="@+id/btn_sub"
                style="@style/ButtonOperatorTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/sub" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_1"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/one" />

            <Button
                android:id="@+id/btn_2"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/two" />

            <Button
                android:id="@+id/btn_3"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/three" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/ButtonOperatorTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_plusOrSub"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/plusOrSub" />

            <Button
                android:id="@+id/btn_0"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/zero" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/ButtonNumTheme"
                android:background="@drawable/button_num_selector"
                android:text="@string/dot" />

            <Button
                android:id="@+id/btn_equal"
                style="@style/ButtonEqualTheme"
                android:background="@drawable/button_equal_selector"
                android:text="@string/equal"

                />
        </LinearLayout>
    </LinearLayout>


