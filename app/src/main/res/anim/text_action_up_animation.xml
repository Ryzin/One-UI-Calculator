<?xml version="1.0" encoding="utf-8"?>
<scale xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="300"
    android:fromXScale="0.8"
    android:fromYScale="0.8"
    android:toXScale="1"
    android:toYScale="1"
    android:pivotX="50%"
    android:pivotY="50%"
    android:fillAfter="true">
    <!--duration：动画的执行时间 毫秒为单位-->
    <!--fromXScale:执行动画的起始缩放X轴-->
    <!--fromYScale：执行动画的起始缩放Y轴-->
    <!--pivotX：缩放起点X轴坐标-->
    <!--pivotY：缩放起点Y轴坐标-->
    <!--toXScale:执行动画的结束缩放X轴-->
    <!--toYScale：执行动画的结束缩放Y轴-->
</scale>