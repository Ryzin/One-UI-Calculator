<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--未点击按钮-->
    <item android:state_window_focused="false">
        <shape
            android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/colorButtonEqualBackground" />
            <!-- android:radius 弧形的半径 -->
            <!-- 设置按钮的四个角为弧形 -->
            <corners android:radius="20dip" />
            <!--按钮边缘-->
            <stroke android:width="0.5dp" android:color="@color/colorButtonEqualPressed" />
        </shape>
    </item>

    <!--点击按钮-->
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/colorButtonEqualPressed" />
            <!-- android:radius 弧形的半径 -->
            <!-- 设置按钮的四个角为弧形 -->
            <corners android:radius="20dip" />
            <!--按钮边缘-->
            <stroke android:width="0.5dp" android:color="@color/colorButtonEqualPressed" />
        </shape>
    </item>>
</selector>
